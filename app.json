{
  "name": "Intelligems Django",
  "description": "A pre-loaded Django project template, ready to be deployed",
  "keywords": [
    "productivity",
    "Python3",
    "Django",
    "DjangoRest"
  ],
  "repository": "https://github.com/intelligems/django-skeleton/",
  "logo": "https://intelligems.s3.amazonaws.com/intelligems_logo.png",
  "success_url": "/admin",
  "scripts": {
    "postdeploy": "bundle exec rake bootstrap"
  },
  "env": {
    "SECRET_KEY": {
      "generator": "secret"
    },
    "PROD": {
      "value": "1"
    },
    "ALLOWED_HOSTS": {
      "value": ".herokuapp.com"
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "2"
    }
  },
  "formation": {
    "web": {
      "quantity": 2,
      "size": "Hobby"
    }
  },
  "image": "heroku/python",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "9.6"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}